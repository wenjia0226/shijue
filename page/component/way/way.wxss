/* way/way.wxss */
.addBtn {
  text-align: right;
  font-size: 26rpx;
  color: #5b32eb;
  padding: 20rpx;
}
.combination {
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  flex: 1;
}
.itemWrap {
  display: flex;
  align-items: center;
  border-bottom: 2rpx dotted grey;
}
.imgBox {
  width: 30rpx;
  height: 30rpx;
}
.imgBox > image{
  width: 100%;
  height: 100%;
}
.topWrap {
 background: -webkit-linear-gradient(bottom, #4db2fd, #5F1BE8);
 display: flex;
 flex-direction: column;
 align-items: center;
 width: 100%;
 height: 300rpx;
 position: relative;
}
/* 头部 */
.avaterBox {
  width: 600rpx;
  border-radius: 50%;
  padding: 20rpx;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  position: relative;
}
.avaterBox > image {
  width: 200rpx;
  height: 200rpx;
}
.stuName {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  padding: 0 20rpx;
  text-align: center;
}
.changeStu {
  position: absolute;
  right: 20rpx;
  bottom: 100rpx;
  width: 200rpx;
}
.inputPh {
  padding: 10rpx 20rpx;
  border: 2rpx solid grey;
  margin: 10rpx auto 30rpx;
  font-size: 28rpx;
  background: #fff;
  width: 80%;
  border-radius: 10rpx;
}
.topBox {
  background: #5b32eb;
  padding: 50rpx;
}
.phoneTitle {
  text-align: center;
  color: #fff;
  margin: 20rpx auto;
  font-size: 30rpx;
  letter-spacing: 3rpx;
}
.centerTitle {
  display: flex;
  margin: 10rpx 30rpx;
}
.praTitle {
  font-size: 28rpx;
  padding: 0 10rpx;
}
.name {
  width: 100rpx;
}
.time {
  width: 150rpx;
}
.wayName {
  flex: 1
}
.pushWay {
  width: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.del {
  width: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.centerNoPlan {
  display: flex;
  justify-content: center;
  margin: 100rpx 20rpx;
}
.noPlan {
  text-align: center;
  padding: 30rpx auto;
  font-size: 30rpx;
  letter-spacing: 5rpx;
  color: grey;
}