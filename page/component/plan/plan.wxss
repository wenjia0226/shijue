/* page/component//plan/plan.wxss */
.mainWrap{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx;
}
.eyeSight {
  width: 100%;
  height: 240rpx;
  background: #6791EE;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx;
}
.eyeSight > image {
  height: 150rpx
}
.inputPh {
  padding: 20rpx;
}
input {
  border: 2rpx solid grey;
  font-size: 24rpx;
  letter-spacing: 2rpx;
  padding: 0 20rpx;
}
.topWrap {
 background: -webkit-linear-gradient(bottom, #4db2fd, #5F1BE8);
 display: flex;
 flex-direction: column;
 align-items: center;
 width: 100%;
}
/* 头部 */
.avaterBox {
  width: 600rpx;
  border-radius: 50%;
  padding-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  position: relative;
}
.avaterBox > image {
  width: 200rpx;
  height: 200rpx;
}
.stuName {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  padding: 0 20rpx;
  text-align: center;
}
.changeStu {
  position: absolute;
  right: 0rpx;
  bottom: 0;
  width: 200rpx;
}