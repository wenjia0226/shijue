/* way/way.wxss */
.addBtn {
  text-align: right;
  font-size: 26rpx;
  font-weight: bold;
  color: red;
  padding: 20rpx;
}
.combination {
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  flex: 1;
}
.itemWrap {
  display: flex;
  align-items: center;
  border-bottom: 2rpx dotted grey;
}
.imgBox {
  width: 30rpx;
  height: 30rpx;
  margin: 0 30rpx;
}
.imgBox > image{
  width: 100%;
  height: 100%;
}
.topWrap {
 background: -webkit-linear-gradient(bottom, #4db2fd, #5F1BE8);
 display: flex;
 flex-direction: column;
 align-items: center;
 width: 100%;
 height: 300rpx;
 position: relative;
}
/* 头部 */
.avaterBox {
  width: 600rpx;
  border-radius: 50%;
  padding-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  position: relative;
}
.avaterBox > image {
  width: 200rpx;
  height: 200rpx;
}
.stuName {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  padding: 0 20rpx;
  text-align: center;
}
.changeStu {
  position: absolute;
  right: 20rpx;
  bottom: 100rpx;
  width: 200rpx;
}
.inputPh {
  padding: 10rpx 20rpx;
  border: 2rpx solid grey;
  margin: 10rpx;
  font-size: 28rpx;
}
.combinationItem {
  display: flex;
  padding: 16rpx 10rpx;
  font-size: 28rpx;
  line-height: 30rpx;
  height: 30rpx;
  width: 100%;
  background: #fff;
  margin: 10rpx
}
.itemName {
  font-size: 28rpx;
  line-height: 30rpx;
  height: 30rpx;
  flex: 1
}
.itemlock {
  width: 100rpx;
  text-align: right;
}
.itemlock > image {
  width: 40rpx;
  height: 40rpx;
}
.nofinish {
  color: red;
  font-weight: bold;
}
.finish {
  color: green;
  font-weight: bold
}