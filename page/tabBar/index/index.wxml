<view class="mainWrap">
  <view class="topWrap">
     <view class="avaterBox" style="margin-top: {{height}}px" wx:if="{{phone}}" >
         <!-- 男孩及段位 -->
          <image src="https://www.guangliangkongjian.com/images/b1.png"  mode="aspectFit" wx:if="{{gender == 0}}"></image>
           <image src="https://www.guangliangkongjian.com/images/g1.png"  mode="aspectFit" wx:if="{{gender == 1}}"></image>
      <!-- 登录后如果没有孩子就显示添加按钮  gender == 2-->
      <image  wx:if="{{(childrenList.length == 0) && phone}}" src="/image/zengjia.png" bindtap='addChild'></image>
      <view class="changeStu">
       <Select bindmyevent="myevent"  bindnewchildrenlist ="newchildrenlist" prop-array='{{selectArray}}'></Select>
      </view>
    </view>
    <view wx:if="{{!phone && childrenList.length == 0}}" class="avaterBox" style="margin-top: {{height}}px" >
       <image wx:if="{{!phone && childrenList.length == 0}}" src="/image/zengjia.png" bindtap="gotoLogin"></image>
    </view>
    <view class="stuName" wx:if="{{phone && studentName}}">{{studentName}}</view>
  </view>
  <view class="centerWrap" wx:for="{{combinationList}}" >
    <view class="combinationItem">
       <view class="itemName" data-id="{{item.combinationId}}" bindtap="gotoDetail">{{item.combinationName}}</view>
       <!-- 1 解锁 2 未解锁 1完成 2 未完成 -->
       <view class="itemlock nofinish" wx:if="{{item.isOpen == 1}}">
        <image src="/image/open2.png" mode="aspectFit"></image>
       </view>
       <view class="itemlock nofinish" wx:if="{{item.isOpen == 2}}">
        <image src="/image/lock.png" mode="aspectFit"></image>
       </view>
        <view class="itemlock finish" wx:if="{{item.isSuccess == 1}}">
          <image src="/image/finish.png" mode="aspectFit"></image>
        </view>
        <view class="itemlock finish" wx:if="{{item.isSuccess == 2}}"  data-id ="{{item.id}}" data-isOpen="{{item.isOpen}}" bindtap="finish">
          <image src="/image/nofinish.png" mode="aspectFit"></image>
        </view>
    </view>
  </view>
 </view>