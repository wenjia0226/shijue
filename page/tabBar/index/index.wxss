/* page/tabBar/index/index.wxss */
.mainWrap {
  background: #F3F3F3;
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.topWrap {
 background: -webkit-linear-gradient(bottom, #4db2fd, #5F1BE8);
 display: flex;
 flex-direction: column;
 align-items: center;
 padding: 20rpx 0 20rpx;
}
/* 头部 */
.avaterBox {
  width: 600rpx;
  border-radius: 50%;
  padding-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  position: relative;
}
.avaterBox > image {
  width: 200rpx;
  height: 200rpx;
}
.stuName {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  padding: 0 20rpx;
  text-align: center;
}
.changeStu {
  position: absolute;
  right: 0rpx;
  bottom: 0;
}
.centerWrap {
  display: flex;
}
.centerWrap > image {
  width: 100rpx;
  height: 100rpx;
}